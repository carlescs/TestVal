@using TestVal.Util
@model FormViewModel
@inject StringStore Store
@{
    ViewBag.Title="Form with validation";
}
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}

<ul>
    @foreach (var item in Store.Strings)
    {
        <li>@item</li>
    }
</ul>

<form asp-action="MyForm" method="POST">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" id="Name" class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="text" id="Password" class="form-control" asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <button type="submit">Send</button>
</form>